<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="30pt"
        android:text="0"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/AC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="clear"
                android:text="AC" />

            <Button
                android:id="@+id/plusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="+/-" />

            <Button
                android:id="@+id/percent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buPercent"
                android:text="%" />

            <Button
                android:id="@+id/divide"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:onClick="OperationEvent"
                android:text="\"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/seven"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="7" />

            <Button
                android:id="@+id/eight"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="8" />

            <Button
                android:id="@+id/nine"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="9" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:onClick="OperationEvent"
                android:text="x"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/four"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="4" />

            <Button
                android:id="@+id/five"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="5" />

            <Button
                android:id="@+id/six"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="6" />

            <Button
                android:id="@+id/minus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:onClick="OperationEvent"
                android:text="-"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/one"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="1" />

            <Button
                android:id="@+id/two"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="2" />

            <Button
                android:id="@+id/three"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="3" />

            <Button
                android:id="@+id/plus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:onClick="OperationEvent"
                android:text="+"
                android:textColor="@android:color/white" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero"
            android:layout_width="69pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="#D6D6D6"
            android:onClick="buNumberEvent"
            android:text="0" />

        <Button
            android:id="@+id/dot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginLeft="1pt"
            android:layout_weight="1"
            android:background="#D6D6D6"
            android:text="." />

        <Button
            android:id="@+id/equal"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginLeft="1pt"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:onClick="equalOp"
            android:text="="
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>